vinos = pd.read_csv(ruta, sep = ';')

X = vinos[["volatile acidity", "chlorides",
                          "free sulfur dioxide", "total sulfur dioxide",
                          "pH", "sulphates", "alcohol"]]
y = vinos[["quality"]]

X_train, X_test, y_train, y_test = train_test_split(X, y, 
